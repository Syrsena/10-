using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] arraySurname = { "Скобников", "Кравченко", "Шутенко", "Полянский", "Акхтырскй" };
            string[] arrayJob = { "Дэб", "Дэб", "Директор", "Тим Дэб", "Старший Дэб" };
            string[] array;
            bool isActive = true;
            int userInput = 0;

            while (isActive)
            {
                Menu(ref userInput);

                switch (userInput)
                {
                    case 1:
                        Console.Clear();
                        Console.WriteLine("Введите фамилию: ");
                        string value = Console.ReadLine();
                        array = arraySurname;
                        AddDossier(ref array, value);
                        arraySurname = array;
                        Console.WriteLine("Введите должность: ");
                        value = Console.ReadLine();
                        array = arrayJob;
                        AddDossier(ref array, value);
                        arrayJob = array;
                        Console.WriteLine("Успешно добавлено");
                        Console.ReadKey();
                        Console.Clear();
                        break;
                    case 2:
                        DossierOutput(arraySurname, arrayJob);
                        break;
                    case 3:
                        Console.Clear();
                        Console.WriteLine("Введите номер досье, которое нужно удалить: ");
                        int index = Convert.ToInt32(Console.ReadLine());
                        array = arraySurname;
                        RemoveDossier(ref index, array);
                        arraySurname = array;
                        array = arrayJob;
                        RemoveDossier(ref index, array);
                        arrayJob = array;
                        break;
                    case 4:

                        break;
                    case 5:

                        break;
                    default:

                        break;
                }
            }
        }

        static void Menu(ref int userInput)
        {
            int commandAddDossier = 1;
            int commandDossierOutput = 2;
            int commandRemoveDossier = 3;
            int commandSearchForSurname = 4;
            int commandExit = 5;
            Console.WriteLine(commandAddDossier + " - Добавить досье\n" +
                commandDossierOutput + " - Вывести все досье\n" +
                commandRemoveDossier + " - Удалить досье\n" +
                commandSearchForSurname + " - Поиск по фамилии\n" +
                commandExit + " - Выход");
            userInput = Convert.ToInt32(Console.ReadLine());
        }

        static void DossierOutput(string[] arraySurname, string[] arrayJob)
        {
            Console.Clear();

            for (int i = 0; i < arraySurname.Length; i++)
            {
                Console.SetCursorPosition(0, i);
                Console.WriteLine((i + 1) + " - ");
                Console.SetCursorPosition(5, i);
                Console.WriteLine(arraySurname[i]);
                Console.SetCursorPosition(22, i);
                Console.WriteLine(arrayJob[i]);
            }
            Console.ReadKey();
            Console.Clear();
        }

        static string[] AddDossier(ref string[] array, string value)
        {
            Console.Clear();
            string[] tempArray = new string[array.Length + 1];

            for (int i = 0; i < array.Length; i++)
            {
                tempArray[i] = array[i];
            }
            tempArray[array.Length] = value;
            array = tempArray;
            return array;
        }

        static string[] RemoveDossier(ref int index, string[] array)
        {
            string[] tempArray = new string[array.Length - 1];

            for (int i = 0; i < index; i++)
            {
                tempArray[i] = array[i];
            }
            for (int i = index + 1; i < array.Length - 1; i++)
            {
                tempArray[i] = array[i];
            }
            array = tempArray;
            return array;
        }
    }
}
