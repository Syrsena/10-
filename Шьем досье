using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] arraySurname = { "Скобников", "Кравченко", "Шутенко", "Полянский", "Акхтырскй" };
            string[] arrayJob = { "Дэб", "Дэб", "Директор", "Тим Дэб", "Старший Дэб" };
            string[] editArray;
            bool isActive = true;
            int userInput = 0;

            while (isActive)
            {
                Menu(ref userInput);

                switch (userInput)
                {
                    case 1:
                        Console.Clear();
                        Console.WriteLine("Введите фамилию: ");
                        string value = Console.ReadLine();
                        editArray = arraySurname;
                        AddDossier(ref editArray, value);
                        arraySurname = editArray;
                        Console.WriteLine("Введите должность: ");
                        value = Console.ReadLine();
                        editArray = arrayJob;
                        AddDossier(ref editArray, value);
                        arrayJob = editArray;
                        Console.WriteLine("Успешно добавлено");
                        Console.ReadKey();
                        Console.Clear();
                        break;
                    case 2:
                        DossierOutput(arraySurname, arrayJob);
                        break;
                    case 3:
                        Console.Clear();
                        Console.WriteLine("Введите номер досье, которое нужно удалить: ");
                        int index = Convert.ToInt32(Console.ReadLine()) - 1;
                        editArray = arraySurname;
                        RemoveDossier(ref editArray, index);
                        arraySurname = editArray;
                        editArray = arrayJob;
                        RemoveDossier(ref editArray, index);
                        arrayJob = editArray;
                        Console.WriteLine("Успешно удалено");
                        Console.ReadKey();
                        Console.Clear();
                        break;
                    case 4:
                        Console.Clear();
                        Console.WriteLine("Введите фамилию: ");
                        string inputSurname = Console.ReadLine();
                        editArray = arraySurname;
                        Search(ref editArray, inputSurname, arraySurname, arrayJob);
                        break;
                    case 5:
                        isActive = false;
                        break;
                    default:
                        Console.Clear();
                        break;
                }
            }
        }

        static void Menu(ref int userInput)
        {
            int commandAddDossier = 1;
            int commandDossierOutput = 2;
            int commandRemoveDossier = 3;
            int commandSearchForSurname = 4;
            int commandExit = 5;
            Console.WriteLine(commandAddDossier + " - Добавить досье\n" +
                commandDossierOutput + " - Вывести все досье\n" +
                commandRemoveDossier + " - Удалить досье\n" +
                commandSearchForSurname + " - Поиск по фамилии\n" +
                commandExit + " - Выход");
            userInput = Convert.ToInt32(Console.ReadLine());
        }

        static void DossierOutput(string[] arraySurname, string[] arrayJob)
        {
            Console.Clear();

            for (int i = 0; i < arraySurname.Length; i++)
            {
                Console.SetCursorPosition(0, i);
                Console.WriteLine((i + 1) + " - ");
                Console.SetCursorPosition(5, i);
                Console.WriteLine(arraySurname[i]);
                Console.SetCursorPosition(22, i);
                Console.WriteLine(arrayJob[i]);
            }
            Console.ReadKey();
            Console.Clear();
        }

        static string[] AddDossier(ref string[] editArray, string value)
        {
            Console.Clear();
            string[] tempArray = new string[editArray.Length + 1];

            for (int i = 0; i < editArray.Length; i++)
            {
                tempArray[i] = editArray[i];
            }
            tempArray[editArray.Length] = value;
            editArray = tempArray;
            return editArray;
        }

        static string[] RemoveDossier(ref string[] editArray, int index)
        {
            string[] tempArray = new string[editArray.Length - 1];

            for (int i = 0; i < index; i++)
            {
                tempArray[i] = editArray[i];
            }
            for (int i = index + 1; i < editArray.Length; i++)
            {
                tempArray[i - 1] = editArray[i];
            }
            editArray = tempArray;
            return editArray;
        }

        static void Search (ref string[] editArray, string inputSurname, string[] arraySurname, string[] arrayJob)
        {
            Console.Clear();

            for (int i = 0; i < editArray.Length; i++)
            {
                if (editArray[i] == inputSurname)
                {
                    Console.SetCursorPosition(0, 0);
                    Console.WriteLine((i + 1) + " - ");
                    Console.SetCursorPosition(5, 0);
                    Console.WriteLine(arraySurname[i]);
                    Console.SetCursorPosition(22, 0);
                    Console.WriteLine(arrayJob[i]);
                }
            }
            Console.ReadKey();
            Console.Clear();
        }
    }
}
