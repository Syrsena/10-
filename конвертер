using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp18
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float rubToDollarRate = 0.017f;
            float rubToEuroRate = 0.016f;
            float dollarToRubRate = 60.53f;
            float dollarToEuroRate = 0.98f;
            float euroToRubRate = 61.62f;
            float euroToDollarRate = 1.02f;

            float countRublesBuy;
            float countDollarsBuy;
            float countEuroBuy;

            float ballanceInRubles = 15000.15f;
            float ballanceInDollars = 755.66f;
            float ballanceInEuro = 543.13f;

            int rublesForDollars = 1;
            int rublesForEuro = 2;
            int dollarsForRubles = 3;
            int dollarsForEuro = 4;
            int euroForRubles = 5;
            int euroForDollars = 6;

            string userInput = "00";
            string commandExit = "0";

            while (userInput != commandExit)
            {
                Console.WriteLine($"\nВаш баланс: \n{ballanceInRubles} рублей. \n{ballanceInDollars} долларов. \n{ballanceInEuro} евро.\n");
                Console.WriteLine($"" +
                    $"Купить рубли за доллары - введите {rublesForDollars} \nКупить рубли за евро - введите {rublesForEuro} \n \n" +
                    $"Купить доллары за рубли - введите {dollarsForRubles} \nКупить доллары за евро - введите {dollarsForEuro}\n \n" +
                    $"Купить евро за рубли - введите {euroForRubles} \nКупить евро за доллары - введите {euroForDollars} \n \n" +
                    $"Для выхода - введите {commandExit} \n");
                userInput = (Console.ReadLine());

                switch (userInput)
                {
                    case "1":
                        {
                            Console.WriteLine("\nПокупка рублей за доллары:\nКурс составляет: " + rubToDollarRate + ". Ваш баланс - " + ballanceInDollars + " долларов" +
                             "\nСколько рублей вы хотите купить ?\n");
                            countRublesBuy = Convert.ToSingle(Console.ReadLine());
                            if (ballanceInDollars >= countRublesBuy * rubToDollarRate)
                            {
                                ballanceInRubles += countRublesBuy;
                                ballanceInDollars -= countRublesBuy * rubToDollarRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    case "2":
                        {
                            Console.WriteLine("\nПокупка рублей за евро:\nКурс составляет: " + rubToEuroRate + ". Ваш баланс - " + ballanceInEuro + " евро" +
                        "\nСколько рублей вы хотите купить ?\n");
                            countRublesBuy = Convert.ToInt32(Console.ReadLine());
                            if(ballanceInEuro >= countRublesBuy * rubToEuroRate)
                            {
                                ballanceInRubles += countRublesBuy;
                                ballanceInEuro -= countRublesBuy * rubToEuroRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    case "3":
                        {
                            Console.WriteLine("\nПокупка долларов за рубли:\nКурс составляет: " + dollarToRubRate + ". Ваш баланс - " + ballanceInRubles + " рублей" +
                        "\nСколько долларов вы хотите купить ?\n");
                            countDollarsBuy = Convert.ToInt32(Console.ReadLine());
                            if (ballanceInRubles >= countDollarsBuy * dollarToRubRate)
                            {
                                ballanceInDollars += countDollarsBuy;
                                ballanceInRubles -= countDollarsBuy * dollarToRubRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    case "4":
                        {
                            Console.WriteLine("\nПокупка долларов за евро:\nКурс составляет: " + dollarToEuroRate + ". Ваш баланс - " + ballanceInEuro + " евро" +
                        "\nСколько долларов вы хотите купить ?\n");
                            countDollarsBuy = Convert.ToInt32(Console.ReadLine());
                            if (ballanceInEuro >= countDollarsBuy * dollarToEuroRate)
                            {
                                ballanceInDollars += countDollarsBuy;
                                ballanceInEuro -= countDollarsBuy * dollarToEuroRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    case "5":
                        {
                            Console.WriteLine("\nПокупка евро за рубли:\nКурс составляет: " + euroToRubRate + ". Ваш баланс - " + ballanceInRubles + " рублей" +
                        "\nСколько евро вы хотите купить ?\n");
                            countEuroBuy = Convert.ToInt32(Console.ReadLine());
                            if (ballanceInRubles >= countEuroBuy * euroToRubRate)
                            {
                                ballanceInEuro += countEuroBuy;
                                ballanceInRubles -= countEuroBuy * euroToRubRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    case "6":
                        {
                            Console.WriteLine("\nПокупка евро за доллары:\nКурс составляет: " + euroToDollarRate + ". Ваш баланс - " + ballanceInDollars + " долларов" +
                        "\nСколько евро вы хотите купить ?\n");
                            countEuroBuy = Convert.ToInt32(Console.ReadLine());
                            if (ballanceInDollars >= countEuroBuy * euroToDollarRate)
                            {
                                ballanceInEuro += countEuroBuy;
                                ballanceInDollars -= countEuroBuy * euroToDollarRate;
                                Console.WriteLine($"\nУспешная покупка.\n");
                            }
                            else
                            {
                                Console.WriteLine("\nНа вашем счете недостаточно средств.\n");
                            }
                        }
                        break;
                    default:
                        Console.WriteLine("\nНеравильная команда\n");
                        break;
                }
            }
        }
    }
}
