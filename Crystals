using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp6
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float moneyHero;
            float priceCrystals = 70.35f;
            bool enoughMoney;
            Console.WriteLine("Добро пожаловать в магазин кристалов! Сколько деньжат ты готов нам отдать?");
            moneyHero = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine($"Кристалы сегодня по {priceCrystals} рублей");
            Console.WriteLine("Сколько кристалов ты купишь?");
            int crystalsCount = Convert.ToInt32(Console.ReadLine());
            enoughMoney = moneyHero >= priceCrystals * crystalsCount;
            crystalsCount *= Convert.ToInt32(enoughMoney);
            moneyHero -= Convert.ToSingle(crystalsCount * priceCrystals);

            Console.WriteLine($"Вы купили - {crystalsCount}, у вас осталось - {moneyHero} рублей. Поздравляю!");
        }
    }
}
