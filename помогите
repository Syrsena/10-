
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            char leftHook = '(';
            char rightHook = ')';
            int leftHookCount = 0;
            int rightHookCount = 0;
            int glubina = 0;
            int maxGlubina = 0;
            Console.WriteLine("Введите скобки");     // ()((())()())
            userInput = Console.ReadLine();

            foreach (var symbol in userInput)
            {
                if (symbol == leftHook)
                {
                    leftHookCount++;
                    glubina++;
                }
                else if (symbol == rightHook)
                {
                    glubina--;
                    rightHookCount++;
                    if (rightHookCount > leftHookCount)
                    {
                        break;
                        Console.WriteLine("Неверное выражение");
                    }
                }
                if (glubina > rightHookCount)
                {
                    maxGlubina = glubina;
                }
            }
            if (leftHookCount == rightHookCount)
            {
                Console.WriteLine("Верное выражение");
                Console.WriteLine(maxGlubina + " - максимальная глубина");
            }
            else if (leftHookCount != rightHookCount)
            {
                Console.WriteLine("Неверное выражение");
            }
        }
    }
}
