using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            char leftHook = '(';
            char rightHook = ')';
            int leftHookCount = 0;
            int rightHookCount = 0;
            Console.WriteLine("Введите скобки");
            userInput = Console.ReadLine();

            foreach (var symbol in userInput)
            {
                if (symbol == leftHook)
                {
                    leftHookCount++;
                }
                else if (symbol == rightHook)
                {
                    rightHookCount++;
                    if (rightHookCount > leftHookCount)
                    {
                        break;
                        Console.WriteLine("Неверное выражение");
                    }

                }

            }
            if (leftHookCount == rightHookCount)
            {
                Console.WriteLine("Верное выражение");
                Console.WriteLine(rightHookCount + " - максимальная глубина"); //Я не совсем понял, что подразумевается под максимальной глубиной вложенности скобок
            }
            else if (leftHookCount != rightHookCount)
            {
                Console.WriteLine("Неверное выражение");
            }
        }
    }
}
